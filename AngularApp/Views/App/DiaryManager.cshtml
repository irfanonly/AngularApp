
<h2>My Diary</h2>

<div class="row margin-top-5">
    <div class="col-md-12">
        <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Your Status" ng-model="newPostText" />
            <div class="btn btn-primary icon-camera input-group-addon" ng-click="postItem()">
                <span class="glyphicon glyphicon-plus"></span>
            </div>
        </div>
        <ul class="list-group margin-top-5">
            <li ng-repeat="item in postList" class="list-group-item">
                <ul class="list-inline">
                    
                    <li>
                        <div class="btn btn-danger icon-camera" ng-click="delete($index)">
                            <span class="glyphicon glyphicon-remove-sign"></span>
                        </div>
                    </li>
                    <li>{{item.Created_On | date : "MMM d,y h:mm a"}}</li>
                    <li>
                        <h3 @*ng-class="{strike: item.completed}"*@>{{item.postText}}</h3>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

